extends layouts/main-layout.pug

block styles 
  link(rel="stylesheet", href="/css/product.css")

block content 
  main 
      if prods.length > 0
        .grid 
          each product in prods 
            article.card.product-item 
              header.card__header 
                h1.proudct__title #{product.title}
              .card__image
                img(src="https://media.istockphoto.com/id/173015527/photo/a-single-red-book-on-a-white-surface.jpg?s=612x612&w=0&k=20&c=AeKmdZvg2_bRY2Yct7odWhZXav8CgDtLMc_5_pjSItY=", alt="A Book")
              .card__content 
                h2.product__price $19.99
                p.product__description A very interesting book about so many even more 
              .card__actions 
                button.btn Add to Cart
      else 
        h1 No Products


      